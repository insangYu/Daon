<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <% include ../partials/nav %>
        <% include ../partials/communitynav %>

    <div class="container post post-new">
<br>
      <div class="buttons">
        <a class="btn btn-secondary py-2 px-3" href="/posts1/index">목록</a>
      </div><br>

      <form class="post-form form-horizontal" action="/posts1" method="post">
        <div class="contentBox">
          <fieldset>
            <div class="form-group <%= (errors.title)?'has-error':'' %>">
              <label for="title" class="col-sm-2 control-label">제목</label>
              <div class="col-sm-10">
                <input class="form-control" type="text" id="title" name="title" value="<%= post1.title %>">
                <% if(errors.title){ %>
                  <span class="help-block"><%= errors.title.message %></span>
                <% } %>
              </div>
            </div>
            <div class="form-group <%= (errors.body)?'has-error':'' %>">
              <label for="body" class="col-sm-2 control-label">내용</label>
              <div class="col-sm-10">
                <textarea class="form-control" id="body" name="body" rows="5"><%= post1.body %></textarea>
                <% if(errors.body){ %>
                  <span class="help-block"><%= errors.body.message %></span>
                <% } %>
              </div>
            </div>
          </fieldset>
        </div>
        <div class="buttons">
          <button type="submit" class="btn btn-secondary py-2 px-3">작성</button>
        </div><br>
        <% if(errors.unhandled){ %>
          <div class="alert alert-danger">
            <%= errors.unhandled %>
          </div>
        <% } %>
      </form>

    </div>  <!-- container end -->
    <% include ../partials/footer %>
  </body>
</html>
